{
  "name": "tms_v2",
  "version": "1.0.0",
  "description": "TestRail을 대체하는 자체 구축형 테스트 케이스 관리 시스템입니다.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "npm -C frontend run lint && npm -C backend run lint",
    "typecheck": "npm -C frontend run typecheck && npm -C backend run typecheck",
    "test:unit": "npm -C frontend run test:run && npm -C backend run test",
    "build": "npm -C frontend run build && npm -C backend run build",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koesnuj/TMS_v2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/koesnuj/TMS_v2/issues"
  },
  "homepage": "https://github.com/koesnuj/TMS_v2#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/dompurify": "^3.0.5",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "lucide-react": "^0.555.0"
  }
}
